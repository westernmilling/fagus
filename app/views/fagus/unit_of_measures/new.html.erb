<h2>New Unit of Measure</h2>

<p>
  <%= link_to 'Return to unit of measures', unit_of_measures_path %>
</p>

<%= form_for(@unit_of_measure, :html => { :method => :post }) do |f| %>
  <%= error_messages(@unit_of_measure) %>
  <%= render :partial => 'form',
             :locals => {
               :form => f,
               :unit_of_measure => @unit_of_measure,
               :unit_type_list => Fagus::UnitOfMeasure.unit_type.values} %>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
